{
	"extends": ["tslint:recommended", "tslint-react"],
	"linterOptions": {
		"exclude": [
			"config/**/*.js",
			"node_modules/**/*.ts",
			"coverage/lcov-report/*.js"
		]
	},
	"rules": {
		"indent": [true, "tabs", 4],
		"arrow-parens": [true, "ban-single-arg-parens"],
		"array-type": [true, "generic"]
	}
}
